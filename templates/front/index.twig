{% do view.registerJsFile('https://dl.frontapp.com/libs/frontjs.min.js') -%}
{% do view.registerJsFile('https://polyfill.io/v3/polyfill.min.js?features=Array.from,Promise,Symbol,Object.setPrototypeOf,Object.getOwnPropertySymbols') -%}
{% do view.registerJsFile('https://cdn.jsdelivr.net/npm/superagent') %}
{% do view.registerJsFile(devMode ? 'https://cdn.jsdelivr.net/npm/vue/dist/vue.js' : 'https://cdn.jsdelivr.net/npm/vue') -%}
{% do view.registerCssFile('https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css') -%}

{% set buttonClasses = "block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded my-2 w-full" -%}
{% set warningButtonClasses = "block bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded my-2 w-full" -%}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
</head>
<body>

<div id="app">
    <div v-if="!loading" class="text-xs" v-cloak>
        <div v-if="user" class="bg-white p-6">
            <img v-if="user.photoUrl" class="block m-auto w-12 h-12 rounded-full" :src="user.photoUrl">
            <div v-else class="default-photo block m-auto w-12 h-12 rounded-full bg-gray-200">
                {{ svg('@app/icons/user.svg') }}
            </div>
            <div
                class="m-auto mt-2 text-center text-base font-bold">{% verbatim %}{{ user.name }}{% endverbatim %}</div>

            <div v-if="user.meta" class="mt-4">
                <div v-for="item in user.meta" class="mt-3">
                    <div
                        class="mt-2 text-gray-400 uppercase font-bold">{% verbatim %}{{ item.label }}{% endverbatim %}</div>
                    <a v-if="item.url" :href="item.url" target="_blank"
                       class="text-blue-500">{% verbatim %}{{ item.value }}{% endverbatim %}</a>
                    <span v-else>{% verbatim %}{{ item.value }}{% endverbatim %}</span>
                </div>
            </div>
        </div>
        <div v-else class="p-6">
            <div class="text-center text-gray-500 text-base">No Craft ID account.</div>
        </div>
        <div class="border-gray-300 border-t border-b pt-2 pb-2 pl-6 pr-6 flex items-center cursor-pointer"
             @click="toggleLicenses">
            <div :class="showLicenses ? 'toggle' : 'toggle -closed'"></div>
            <div class="font-bold">Licenses <span class="font-normal text-gray-400"
                                                  v-if="licenses">({% verbatim %}{{ licenses.length }}{% endverbatim %})</span>
            </div>
        </div>
        <div v-if="showLicenses">
            <div v-for="license in licenses" class="pt-3 pb-3 pl-6 pr-6 bg-white border-gray-300 border-b">
                <div class="font-mono font-bold">{% verbatim %}{{ license.key }}{% endverbatim %}</div>
                <a v-if="license.domain" :href="domain(license.domain)" class="text-blue-500"
                   target="_blank">{% verbatim %}{{ license.domain }}{% endverbatim %}</a>
                <a v-if="!user || license.email != user.email" :href="mailto(license.email)"
                   class="text-blue-500">{% verbatim %}{{ license.email }}{% endverbatim %}</a>
            </div>
        </div>
    </div>
</div>

{% css %}
[v-cloak] {
    display: none
}

body {
    background: #f8f8f8;
}

.default-photo {
    overflow: hidden;
}

.default-photo rect,
.default-photo circle,
.default-photo ellipse,
.default-photo line,
.default-photo polyline,
.default-photo polygon,
.default-photo path,
.default-photo text {
    fill: #cbd5e0;
    stroke-width: 0;
}

.toggle {
    height: 14px;
    width: 14px;

    background-image: url("data:image/svg+xml;base64,");
    background-repeat: no-repeat;
    background-size: 14px;
    background-position: center;

    margin-right: 8px;
}

.toggle.-closed {
    transform: rotate(-90deg);
}

{% endcss %}

{% js %}
window.secret = {{ getenv('FRONT_AUTH_SECRET')|json_encode|raw }};
{% endjs %}

{% js %}
var app = new Vue({
    el: '#app',
    data: {
        loading: true,
        showLicenses: true,
        user: null,
        licenses: [],
    },
    mounted() {
        Front.on('conversation', data => {
            this.reload(data.contact.handle);
        });
    },
    methods: {
        reload(email) {
            this.loading = true;

            superagent
                .post('/actions/craftnet/front/load-data?auth_secret=' + window.secret)
                .send({email: email})
                .set('accept', 'json')
                .end((err, res) => {
                    this.user = res.body.user;
                    this.licenses = res.body.licenses;
                    this.loading = false;
                });
        },

        toggleLicenses() {
            this.showLicenses = !this.showLicenses;
        },

        domain(domain) {
            return 'http://' + domain;
        },

        mailto(email) {
            return 'mailto:' + email;
        }
    }
})
{% endjs %}

</body>
</html>
